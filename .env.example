# Copy this file to .env and fill in the values

# Base URL where the API is accessible (used for Stripe redirect URLs and scanner)
API_URL=http://localhost:3001

# Stripe credentials
# sk_test_... for testing, sk_live_... in production
STRIPE_SECRET_KEY=sk_test_replace_me

# Webhook signing secret for endpoint /stripe/webhook
# Use Stripe CLI or Dashboard to obtain: whsec_...
STRIPE_WEBHOOK_SECRET=whsec_replace_me

# SMTP settings for sending ticket confirmation emails
# Note: code uses secure SMTP (TLS) and expects port 465
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=tickets@example.com
SMTP_FROM_NAME=Tickets
